<Window
    x:Class="ArtAttack.RenewContractView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ArtAttack"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Renew Contract">

    <Grid Padding="30" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!-- Contract Selection Area -->
        <StackPanel Grid.Column="0" Margin="0,0,20,0">
            <TextBlock Text="CONTRACT SELECTION" FontSize="20" FontWeight="Bold" Margin="0,0,0,10" Foreground="DarkOrange"/>

            <ComboBox x:ConnectionId='6' x:Name="ContractComboBox"
                      Width="200"
                                                                          
                      DisplayMemberPath="DisplayName"
                      Margin="0,0,0,10"/>

            <StackPanel x:ConnectionId='7' x:Name="ContractDetailsPanel" Visibility="Collapsed" Margin="0,20,0,0">
                <TextBlock x:ConnectionId='8' x:Name="StartDateTextBlock" FontSize="16" />
                <TextBlock x:ConnectionId='9' x:Name="EndDateTextBlock" FontSize="16" />
                <TextBlock x:ConnectionId='10' x:Name="StatusTextBlock" FontSize="16" />
            </StackPanel>

        </StackPanel>

        <!-- Renewal Request Form Area -->
        <StackPanel Grid.Column="1">
            <TextBlock Text="RENEWAL REQUEST FORM"
                       FontSize="20"
                       FontWeight="Bold"
                       Margin="0,0,0,10"
                       Foreground="HotPink"/>

            <TextBlock x:ConnectionId='2' x:Name="StartDateText"
                       FontSize="14"
                       Margin="0,0,0,5"
                       Text="New Start Date: "/>

            <TextBlock x:ConnectionId='3' x:Name="StartDateValueTextBlock"
                       FontSize="14"
                       Margin="0,0,0,10"
                       Foreground="Gray"/>

            <TextBlock Text="Choose the new End Date:" FontSize="14" />


            <CalendarDatePicker x:ConnectionId='4' x:Name="EndDatePicker"
                                Margin="0,5,0,10"/>

            <Button x:ConnectionId='5' Content="SUBMIT"
                                              
                    Background="LightGreen"
                    Width="100"
                    HorizontalAlignment="Left"
                    Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>

