<Window
    x:Class="ArtAttack.BorrowProductWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:local="using:ArtAttack.Utils"
    Title="Product Details">

    <!-- Use a Grid to structure the main content -->
    <Grid Margin="20" x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Product Details Section -->
        <StackPanel Grid.Row="0" Grid.ColumnSpan="2">
            <TextBlock x:Name="txtProductName" Text="{Binding ProductName}" FontSize="20" FontWeight="Bold"/>
            <TextBlock x:Name="txtPrice" Text="{Binding PriceText}" FontSize="16"/>
            <TextBlock x:Name="txtSeller" Text="{Binding SellerText}" FontSize="16"/>
            <TextBlock x:Name="txtType" Text="{Binding TypeText}" FontSize="16"/>
            <TextBlock x:Name="txtDates" Text="{Binding DatesText}" FontSize="14" Foreground="#666666"/>
        </StackPanel>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,20,0,0">
            <Button x:Name="BorrowButton" 
                    Content="Borrow" 
                    Visibility="{Binding ProductStatus, Converter={StaticResource BorrowedToVisibilityConverter}}"/>
        </StackPanel>

        <!-- Waitlist Actions -->
        <StackPanel Grid.Row="2" Grid.Column="1" Margin="90,20,0,0">
            <Button x:Name="JoinWaitListButton" 
                    Content="Join Waitlist" 
                    Visibility="{Binding IsJoinWaitListVisible}"/>
            <StackPanel x:Name="waitlistActionsPanel" 
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Visibility="{Binding ShowLeaveWaitlistButton}">
                <Button x:Name="LeaveWaitListButton" 
                        Content="Leave Waitlist" 
                        Width="120"/>
                <Button x:Name="ViewPositionButton" 
                        Content="Position" 
                        Width="120"/>
            </StackPanel>
        </StackPanel>

        <!-- Canvas for placing the Notifications Button -->
        <Canvas VerticalAlignment="Top" HorizontalAlignment="Right" Width="120" Height="40">
            <!-- Notifications Button positioned at top-right corner of the window -->
            <Button x:Name="NotificationsButton"
                    Content="Notifications"
                    Width="120"
                    Height="40"
                    Canvas.Left="0"
                    Canvas.Top="10"/>
            <!-- Margin from top-right corner -->
        </Canvas>

    </Grid>
</Window>
